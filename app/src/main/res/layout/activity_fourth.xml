<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hu.FourthActivity"
    android:background="@android:color/white">


    <TextView
        android:id="@+id/chartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="焦慮指數趨勢圖"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lineChart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- 問卷區塊 ScrollView -->
    <ScrollView
        android:id="@+id/surveyScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/questionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F9F9F9" />
    </ScrollView>

    <!-- LineChart -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="0dp"
        android:layout_height="630dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/chartTitle"
        app:layout_constraintBottom_toTopOf="@id/cardViewExplanation2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 說明區塊 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewExplanation2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/lineChart"
        app:layout_constraintBottom_toTopOf="@id/buttonRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="@android:color/black"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/textAnxietyExplanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="此圖包括 xxxx - xxxx 間的資料\n\n0 至 4 分：極輕微焦慮    5 至 9 分：輕度焦慮\n10 至 14 分：中度焦慮    15 至 21 分：重度焦慮\n(橫坐標為日期，縱座標為焦慮指數)"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_margin="12dp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- 底部按鈕橫排 -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#EEEEEE"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnBackToThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上一頁" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartSurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="🧠焦慮指數測量"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1976D2"
            app:cornerRadius="12dp"
            android:elevation="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShowChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="📈焦慮指數折線圖"
            android:textColor="#FFFFFF"
            android:backgroundTint="#388E3C"
            app:cornerRadius="12dp"
            android:elevation="4dp" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/headerImage"
        android:layout_width="400dp"
        android:layout_height="700dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/frog3"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/subHeaderText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        />

    <ImageView
        android:id="@+id/headerImage2"
        android:layout_width="400dp"
        android:layout_height="700dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/frog4"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/subHeaderText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />


    <TextView
        android:id="@+id/headerText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:elevation="4dp"
        android:background="@drawable/eader_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="24dp"
        />


    <TextView
        android:id="@+id/subHeaderText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="讓焦慮被看見，讓改變有起點。"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="24dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>