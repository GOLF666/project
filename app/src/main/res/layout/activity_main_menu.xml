<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"
        android:background="#FAFAFA"
        android:paddingBottom="140dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 新增主標題 -->
            <TextView
                android:id="@+id/titleMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="健康功能總覽"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:letterSpacing="0.05" />

            <View
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:background="#26C6DA"
                android:layout_marginBottom="12dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_feature_card"
                android:elevation="4dp"
                android:padding="16dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:useDefaultMargins="true"
                    android:alignmentMode="alignMargins"
                    android:gravity="center">

                    <!-- 胡的頁面 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnSecondActivity"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/ic_blood_pressure"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:contentDescription="胡的頁面"
                            android:padding="16dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="血壓搜尋"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- 醫院掛號 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnbmiActivity"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/ic_scale"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:contentDescription="體重"
                            android:padding="16dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="體重分析"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- 健康分析 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnGoToAnalysis"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/analysis"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:contentDescription="健康分析"
                            android:padding="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="健康分析"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- 運動建議 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnGoToExercise"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/exercise"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:contentDescription="運動建議"
                            android:padding="16dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="運動建議"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- 健康教學 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnAnxiety"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/education"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:contentDescription="健康教學"
                            android:padding="16dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="健康教學"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- 醫院掛號 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnhosActivity"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/hospital"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:contentDescription="醫院掛號"
                            android:padding="16dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="醫院掛號"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- 就醫行事曆 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnAppointmentActivity"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/hospitalcalender"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:contentDescription="就醫行事曆"
                            android:padding="16dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="就醫行事曆"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- 藥物提醒 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnWeight"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/ic_medicine"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:contentDescription="藥物提醒"
                            android:padding="16dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="藥物提醒"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- 其他提醒 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnMedications"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/reminder"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:contentDescription="其他提醒"
                            android:padding="16dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="其他提醒"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- 求助通知 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnHelpNoticeActivity"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/help"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:contentDescription="求助通知"
                            android:padding="16dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="求助通知"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <!-- 焦慮指數 -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1">

                        <ImageButton
                            android:id="@+id/btnanxietyindex"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/btn_border"
                            android:src="@drawable/anxiety"
                            android:scaleType="centerInside"
                            android:adjustViewBounds="true"
                            android:elevation="6dp"
                            android:contentDescription="焦慮指數"
                            android:padding="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="焦慮指數"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_marginTop="8dp"
                            android:textStyle="bold"
                            android:letterSpacing="0.05" />
                    </LinearLayout>


                </GridLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <!-- ✨ 提示語（固定在最底下青蛙上方） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_bottom_fade"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:gravity="center">

        <!-- ✅ 將「今日小叮嚀」與語錄包進同一個區塊 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/bg_quote_box"
            android:elevation="3dp"
            android:padding="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/quoteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日小叮嚀"
                android:textColor="#212121"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/quoteText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#388E3C"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/frogButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/kero"
            android:background="@drawable/bg_circle_shadow"
            android:contentDescription="健康助手"
            android:scaleType="fitCenter"
            android:elevation="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/frogHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="點擊可詢問健康問題喲~🐸"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:padding="6dp"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>
</RelativeLayout>